<%= render "devise/shared/error_messages", resource: resource %>

<div class="card mx-auto col-lg-4 pt-3 my-3">
  <h1 class="mb-3">S'inscrire</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "form", f: f %>
    <%= f.submit "S'inscrire", class:"btn btn-primary col-12 mb-2" %>
  <% end %>

  <div class="form-row mb-3">
    <div class="form-group col-md-6 mt-2 mb-2">
      <%= link_to "Menu principal", root_path, class:"btn btn-danger col-12" %>
    </div>
    <div class="form-group col-md-6 mt-2 mb-2">
      <%= link_to "Se connecter", new_user_session_path, class:"btn btn-warning text-dark col-12" %>
    </div>
  </div>
</div>
